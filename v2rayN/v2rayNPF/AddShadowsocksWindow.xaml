<Window x:Class="v2rayNPF.AddShadowsocksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:v2rayNPF"
        mc:Ignorable="d"
        Title="Shadowsocks Server" Height="450" Width="600" Background="#FFBBBBBB" Icon="v2ray.ico" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Topmost="True" SizeToContent="Height">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu VerticalAlignment="Center" Background="{x:Null}" Margin="0,6,0.286,5.714">
            <MenuItem Header="Import Config File">
                <MenuItem Name="ImportClipMenuItem" Header="Import URL from Clipboard" Click="ImportClipMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <StackPanel Grid.Row="1" Margin="10,10,0,0">
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Address" VerticalAlignment="Center"/>
                <TextBox Name="AddressBox" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=TempItem.address}" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Height="23" LostFocus="Info_Changed"/>
            </Grid>
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Port" VerticalAlignment="Center"/>
                <TextBox Name="PortBox" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=TempItem.port}" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Height="23" LostFocus="Info_Changed"/>
            </Grid>
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Password" VerticalAlignment="Center"/>
                <TextBox Name="PasswordBox" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=TempItem.id}" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Height="23" LostFocus="Info_Changed"/>
            </Grid>
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Encryption" VerticalAlignment="Center"/>
                <ComboBox Name="EncryptionBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Grid.Column="1" SelectedIndex="0">
                    <ComboBoxItem Content="aes-256-cfb"/>
                    <ComboBoxItem Content="aes-128-cfb"/>
                    <ComboBoxItem Content="chacha20"/>
                    <ComboBoxItem Content="chacha20-ietf"/>
                    <ComboBoxItem Content="aes-256-gcm"/>
                    <ComboBoxItem Content="aes-128-gcm"/>
                    <ComboBoxItem Content="chacha20-poly1305"/>
                    <ComboBoxItem Content="chacha20-ietf-poly1305"/>
                </ComboBox>
            </Grid>
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Display Name" VerticalAlignment="Center"/>
                <TextBox Name="AliasBox" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=TempItem.remarks}" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Height="23"/>
            </Grid>

        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">
            <Button Name="OkBtn" Content="OK" Width="75" Margin="10,0,0,10" Click="OkBtn_Click"/>
            <Button Name="CancelBtn" Content="Cancel" Width="75" Margin="10,0,0,10" Click="CancelBtn_Click"/>
        </StackPanel>

    </Grid>
</Window>
